<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Medication"
             Title="Medication">
    <Grid ColumnDefinitions="2*" RowDefinitions="8*">
        <Label 
            Grid.Row="0"
            Text="Record taken medications here."
            VerticalOptions="Start" 
            HorizontalOptions="Center"
            Padding="20"
            Margin="20"/>

        <Button
            Grid.Row="1"
            Text="Paracetamol"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Padding="20"
            Margin="20"
            />

        <Button
            Grid.Row="1"
            Grid.Column="1"
            Text="Rennie"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="20"
            Margin="20"
            />

        <Button
            Grid.Row="2"
            Grid.Column="0"
            Text="Rennie"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="20"
            Margin="20"
            />

    </Grid>
</ContentPage>