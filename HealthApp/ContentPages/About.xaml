<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.About"
             Title="About">
    <VerticalStackLayout>
        <Label 
            FontAttributes="Bold"
            Text="About my health App!"
            VerticalOptions="Center" 
            FontSize="Large"
            Padding="10"
            HorizontalOptions="Center" />

        <Label
            Text="This app is to make recording what you have eaten/drank much easier. Press a button and it'll record the time and date automatically."
            VerticalOptions="Center"
            Padding="40"
            FontSize="Medium"
            HorizontalOptions="Center" />
        
        <Label
            Text="New features are on there way so check back soon"
            VerticalOptions="Center"
            Padding="40"
            FontSize="Medium"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>